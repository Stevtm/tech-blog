<h1>
    The Tech Blog
</h1>

{{!-- post information --}}
<article id="single-post">
    <ul>
        <li>
            <div class="post-header">
                <h2>{{post.title}}</h2>
                <h3>Posted by {{post.user.username}} on {{format_date post.createdAt}}</h3>
            </div>
            <p>{{post.post_text}}</p>
        </li>
    </ul>
</article>


{{!-- comment information --}}
{{#each post.comments}}
<article id="comments">
    <ul>
        <li>
            <div class="post-header"></div>
            <p>
                {{comment_text}}
                <br><br>
                - {{user.username}}, {{format_date createdAt}}
            </p>
        </li>
    </ul>
</article>
{{/each}}

{{!-- field to add comments when the user is logged in --}}
{{#if loggedIn}}
<form id="create-comment-form">
    <div class="post-header"></div>
    <div class="form">
        <div class="input-field">
            <label for="comment-text">Comment</label>
            <textarea id="comment-text" name="comment-text"></textarea>
        </div>
        <button type="submit">Submit</button>
    </div>

</form>

<script src="/javascript/create-comment.js"></script>
{{/if}}