<article id="home-page">
    <ul>
        {{#each posts}}
        <li>
            <div class="post-header">
                <h2><a href="/post/{{id}}">{{title}}</a></h2>
                <h3>Posted by {{user.username}} on {{format_date createdAt}}</h3>
            </div>
            <p>{{post_text}}</p>
        </li>
        {{/each}}
    </ul>
</article>